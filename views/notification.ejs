<% if(locals?.message?.success){ %>
    <div class="notification fixed bg-success text-white rounded py-4 px-5 flex items-center" style="left: 50%;z-index: 999;top: 20px;transition: all 0.5s;font-size: 17px;">
        <%= locals?.message?.success %>
        <button onclick="closeNotification()" class="bg-transparent" style="padding-left: 10px;">
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <line x1="18" y1="6" x2="6" y2="18" />
                <line x1="6" y1="6" x2="18" y2="18" />
            </svg>
        </button>
    </div>
<% } %>
<% if(locals?.message?.error){ %>
    <div class="notification fixed bg-error text-white rounded py-4 px-5 flex items-center" style="left: 50%;z-index: 999;top: 20px;transition: all 0.5s;font-size: 17px;">
        <%= locals?.message?.error %>
        <button onclick="closeNotification()" class="bg-transparent" style="padding-left: 10px;">
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <line x1="18" y1="6" x2="6" y2="18" />
                <line x1="6" y1="6" x2="18" y2="18" />
            </svg>
        </button>
    </div>
<% } %>